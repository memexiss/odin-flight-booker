<% departure_airport = @selected_flight.from_airport.code %>
<% arrival_airport = @selected_flight.to_airport.code %>
<% selected_date = @selected_flight.scheduled_on.strftime('%B %d, %Y') %>
<% scheduled_time = @selected_flight.scheduled_on.strftime('%H:%M') %>
<% arrival_time = (@selected_flight.scheduled_on + (@selected_flight.duration/60).to_i.hours).strftime('%H:%M') %>

<section class="container">
      <div class="col">
        <div class="col">
          <h1 class="title">
            Your trip summary
          </h1>
          <h2 class="h3 text-info">
            <%= selected_date %> | <%= departure_airport %> - <%= arrival_airport %> | <%= scheduled_time %> - <%= arrival_time %>
          </h2>
        </div>

        <div class="col">
          <%= render "booking_form" %>
        </div>
      </div>
</section>