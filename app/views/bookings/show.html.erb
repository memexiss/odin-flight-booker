<section>
        <h1>
          Trip summary
        </h1>
        <h2 class="h3 text-info">
         <%= @booking.flight.scheduled_on.strftime('%d %B %Y') %>
        </h2>
        <table class="table">
          <thead>
            <tr>
              <th>Departure</th>
              <th>Arrival</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @booking.flight.from_airport.code %> <%= @booking.flight.scheduled_on.strftime('%H:%M') %></td>
              <td><%= @booking.flight.to_airport.code %> <%= (@booking.flight.scheduled_on + (@booking.flight.duration/60).to_i.hours).strftime('%H:%M') %></td>
            </tr>
          </tbody>
        </table>
        
        <h1 class="title">
          Passenger details
        </h1>
        <table class="table">
          <thead>
            <tr>
              <th>Passenger name</th>
            </tr>
          </thead>
          <tbody>
          <% @booking.passengers.each_with_index do |passenger, idx| %>
            <tr>
              <td><%= passenger.name %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
  
        <h1 class="title">
          Contact details
        </h1>
        <table class="table">
          <thead>
            <tr>
              <th>Passenger name</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody>
          <% @booking.passengers.each_with_index do |passenger, idx| %>
            <tr>
              <td><%= passenger.name %></td>
              <td><%= passenger.email %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
  
        <%= link_to 'Book more flights', root_path, class: "btn btn-outline-primary" %>
</section>